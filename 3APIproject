import yfinance as yf

# Define tickers
tickers = ["SPY", "GC=F", "^GSPC"]   # <-- ^GSPC is the S&P 500 Index

# Download historical data (last year, daily)
data = yf.download(tickers, start="2024-01-01", end="2025-01-01")

# Show the first few rows
print(data.head())

# Example: closing prices only
close_prices = data["Close"]
print(close_prices.head())

# Optional: Plot the closing prices
import matplotlib.pyplot as plt

close_prices.plot(figsize=(10,6))
plt.title("SPY, Gold Futures, and S&P 500 Index")
plt.ylabel("Price")
plt.xlabel("Date")
plt.grid(True)
plt.show()

